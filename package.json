{
  "name": "use-toc",
  "version": "1.0.0",
  "description": "A React hook for generating a table of contents from a markdown file",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "lint": "tsc",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "test": "vitest run",
    "ci": "npm run build && npm run format:check && npm run check-exports && npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/christophersesugh/use-toc.git"
  },
  "keywords": [
    "react",
    "hooks",
    "table of contents",
    "markdown",
    "toc"
  ],
  "author": "Christopher Sesugh Aondona <christohybrid185@gmail.com> (https://codingsimba.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/christophersesugh/use-toc/issues"
  },
  "homepage": "https://github.com/christophersesugh/use-toc#readme",
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.1",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  }
}
